{
    "name": "renegare/aiv",
    "description": "api input validator (with support for Silex)",
    "keywords": ["silex", "validator", "renegare", "skip"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mudi Ugbowanko",
            "email": "mudi@renegare.com"
        }
    ],

    "minimum-stability": "stable",

    "autoload": {
        "psr-4": {
            "AIV\\": "src"
        }
    },

    "require": {
        "php": ">=5.4.0",
        "symfony/validator": ">=2.4,<2.6-dev"
    },

    "require-dev": {
        "phpunit/phpunit": "4.2.*",
        "silex/silex": ">=1.0",
        "symfony/http-foundation": ">=2.4,<2.6-dev",
        "symfony/browser-kit": ">=2.3,<2.6-dev",
        "satooshi/php-coveralls": "dev-master"
    },

    "scripts": {"test": "phpunit"}
}
